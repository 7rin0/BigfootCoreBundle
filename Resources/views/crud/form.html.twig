<form action="" method="post" {{ form_enctype(form) }}>
    <div class="widget">
        <div class="widget-head">
            <div class="pull-left">{{ title }}</div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="padd">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="widget-foot">
            <a href="{{ path(listRoute) }}" class="btn">Annuler</a>
            <button class="btn pull-right" type="submit">Enregistrer</button>
            <div class="clearfix"></div>
        </div>
    </div>
</form>
