<form action="{{ action_route }}" method="post" {{ form_enctype(form) }}>
    <div class="widget">
        <div class="widget-head">
            <div class="pull-left">{{ form_title }}</div>
            <div class="clearfix"></div>
        </div>

        <div class="widget-content">
            <div class="padd">
                {{ form_widget(form) }}
            </div>
        </div>

        <div class="widget-foot">
            <button class="btn" type="submit">{{ action_name }}</button>
            <a href="{{ path(cancel_route) }}" class="btn">Cancel</a>
            <div class="clearfix"></div>
        </div>
    </div>
</form>